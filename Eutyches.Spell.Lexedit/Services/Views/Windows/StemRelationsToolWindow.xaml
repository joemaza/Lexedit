<local:ToolWindowBase
    x:Class="Eutyches.Spell.Lexedit.Services.Views.Windows.StemRelationsToolWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:guc="clr-namespace:Eutyches.Spell.Lexedit.UserControls"
    xmlns:local="clr-namespace:Eutyches.Spell.Lexedit.Services.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:Eutyches.Spell.Lexedit.Services.Views.Controls"
    xmlns:vm="clr-namespace:Eutyches.Spell.Lexedit.Services.ViewModels"
    Title="{Binding Path=Title}"
    Width="900"
    Height="500"
    MinWidth="800"
    MinHeight="450"
    DataContextChanged="OnDataContextChanged"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <uc:StemRelationsView Grid.Row="0" />
        <guc:OKCancelButtons Grid.Row="1" />
    </Grid>
</local:ToolWindowBase>