<UserControl
    x:Class="Eutyches.Spell.Lexedit.UserControls.SaveCancelButtons"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Eutyches.Spell.Lexedit.Services.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
        <Button Command="{Binding Path=SaveCommand}" Content="_Save" />
        <Button Command="{Binding Path=CancelCommand}" Content="Cancel" />
    </StackPanel>
</UserControl>